<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/picture_image"
            android:layout_width="320dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_profile" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/categoria_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="221dp"
            android:text="Nombre"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoria_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/name_text"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Categoria"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tiempo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/precio_text"
            android:layout_marginStart="110dp"
            android:layout_toEndOf="@+id/categoria_text"
            android:text="Tiempo"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precio_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/categoria_text"
            android:text="Precio"
            android:textSize="15sp"
            android:textStyle="bold" />




    </RelativeLayout>

</android.support.v7.widget.CardView>
